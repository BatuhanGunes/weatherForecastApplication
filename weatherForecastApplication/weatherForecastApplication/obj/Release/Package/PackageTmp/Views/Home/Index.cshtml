@{
    ViewBag.Title = "Anasayfa";
}

<!DOCTYPE html>
    <html lang="en">

        <head>

        </head>

        <body>

            <div class="site-content">
                <div class="site-header">
                    <div class="container">
                        <a href="~/Home/Index" class="branding">
                            <img src="~/images/logo.png" alt="" class="logo">
                            <div class="logo-type">
                                <h1 class="site-title">HAVA DURUMU TAHMİN UYGULAMASI</h1>
                                <small class="site-description">Kütahya Dumlupınar Üniversitesi</small>
                            </div>
                        </a>

                        <!-- Default snippet for navigation -->
                        <div class="main-navigation">
                            <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                            <ul class="menu">
                                <li class="menu-item current-menu-item">@Html.ActionLink("Anasayfa", "Index", "Home")</li>
                                <li class="menu-item">@Html.ActionLink("Hakkımızda", "About", "Home")</li>
                                <li class="menu-item">@Html.ActionLink("İletişim", "Contact", "Home")</li>
                            </ul> <!-- .menu -->
                        </div> <!-- .main-navigation -->

                        <div class="mobile-navigation"></div>

                    </div>
                </div> <!-- .site-header -->

                <div class="hero">
                    <div class="container">
                        <h1 class="site-title">KÜTAHYA ŞEHRİ İÇİN HAVA DURUMU TAHMİNİ</h1>
                    </div>
                </div>

                <div class="forecast-table">
                    <div class="container">
                        <div class="forecast-container">
                            <div class="today forecast">
                                <div class="forecast-header">
                                    <div class="day">@TempData["gunAdi1"] (Bugün)</div>
                                    <div class="date">@TempData["Tarih"]</div>
                                </div> <!-- .forecast-header -->
                                <div class="forecast-content">
                                    <div class="location">Kütahya / Türkiye</div>
                                    <div class="degree">
                                        <div class="num">@TempData["predictionTemp1"]<sup>o</sup>C</div>
                                        <div class="forecast-icon">
                                            <img src=@TempData["predictionSymbol1"] alt="" width=90>
                                        </div>
                                    </div>
                                    <span><img src="~/images/icon-umberella.png" alt="">%@TempData["predictionRain1"]</span>
                                    <span><img src="~/images/icon-compass.png" alt="">Basınç: @TempData["predictionPressure"] hPa</span>
                                    <span><img src="~/images/icon-humidity.png" alt="">Nem: %@TempData["predictionHumidity1"]</span>
                                </div>
                            </div>
